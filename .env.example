# ===========================================
# Regina Online Tests - Environment Configuration
# ===========================================

# Target Environment
# Options: local, prod
TARGET=local

# ===========================================
# Base URLs Configuration
# ===========================================

# Local Development URLs
TEST_BASE_URL_LOCAL=http://localhost:3000
API_BASE_URL_LOCAL=http://localhost:3000/api
ADMIN_BASE_URL_LOCAL=http://localhost:3000/your-protected-area

# Production URLs (replace with your actual domain)
TEST_BASE_URL_PROD=https://your-domain.com
API_BASE_URL_PROD=https://your-domain.com/api
ADMIN_BASE_URL_PROD=https://your-domain.com/your-protected-area

# Dynamic URLs (set automatically based on TARGET)
TEST_BASE_URL=
API_BASE_URL=
ADMIN_BASE_URL=

# ===========================================
# Sensitive Application Paths (KEEP PRIVATE!)
# ===========================================
# These are placeholder names - actual values should be in your private .env file
# and in GitHub Secrets for CI/CD. DO NOT commit real values!

# Protected area paths (replace with your actual paths)
PROTECTED_AREA_PATH=/your-protected-area
PROTECTED_LOGIN_PATH=/your-login-path
PROTECTED_DASHBOARD_PATH=/your-dashboard-path
PROTECTED_CONTENT_PATH=/your-content-management
PROTECTED_CONTENT_CREATE_PATH=/your-content-create
PROTECTED_CONTENT_EDIT_PATH=/your-content-edit
PROTECTED_USERS_PATH=/your-user-management
PROTECTED_BACKUP_PATH=/your-backup-area
PROTECTED_SECURITY_PATH=/your-security-settings
PROTECTED_SETTINGS_PATH=/your-app-settings

# Authentication paths (replace with your actual paths)
LOGIN_PATH=/your-login
LOGOUT_PATH=/your-logout
REGISTER_PATH=/your-register
FORGOT_PASSWORD_PATH=/your-forgot-password
RESET_PASSWORD_PATH=/your-reset-password

# API endpoints (replace with your actual API paths)
PROTECTED_API_STATS_PATH=/your-api-stats
PROTECTED_API_USERS_PATH=/your-api-users
AUTH_API_LOGIN_PATH=/your-api-login
AUTH_API_LOGOUT_PATH=/your-api-logout
AUTH_API_PROFILE_PATH=/your-api-profile

# Health check and service configuration
HEALTH_ENDPOINT_PATH=/health
BACKEND_SERVICE_PORT=3001

# ===========================================
# Authentication Credentials
# ===========================================

# Admin credentials for authentication setup
# These should be stored in GitHub Secrets for CI/CD
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_in_production

# Test user credentials (if needed for user role tests)
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=test_password

# ===========================================
# Test Execution Configuration
# ===========================================

# Run tests in headed mode (set to 'true' for debugging)
HEADED=false

# Docker environment flag
DOCKER=false

# CI environment (automatically set in CI/CD)
# CI=true

# ===========================================
# Test Data Configuration
# ===========================================

# Test blog post data
TEST_BLOG_TITLE="Test Blog Post - E2E"
TEST_BLOG_CONTENT="This is a test blog post created during E2E testing."
TEST_BLOG_EXCERPT="Test excerpt for E2E testing"

# ===========================================
# Browser Configuration
# ===========================================

# Timeout configurations (in milliseconds)
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000
EXPECT_TIMEOUT=15000

# Screenshot and video settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# ===========================================
# API Testing Configuration
# ===========================================

# API rate limiting test settings
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=3600

# ===========================================
# Performance Testing Configuration
# ===========================================

# Performance thresholds (in milliseconds)
MAX_PAGE_LOAD_TIME=5000
MAX_API_RESPONSE_TIME=2000
MAX_FIRST_PAINT_TIME=3000
MAX_LARGEST_CONTENTFUL_PAINT=4000

# ===========================================
# Logging Configuration
# ===========================================

# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/test.log

# Debug settings
DEBUG_MODE=false
PAUSE_ON_FAILURE=false
TRACE_VIEWER=false

# ===========================================
# Security & API Keys
# ===========================================

# API authentication (if needed for testing API functionality)
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_for_testing

# Rate limiting settings (requests per minute)
API_RATE_LIMIT=60
CONTACT_FORM_RATE_LIMIT=5

# ===========================================
# Mobile & Responsive Testing
# ===========================================

# Device emulation
MOBILE_DEVICE=iPhone 12
TABLET_DEVICE=iPad Mini
DESKTOP_RESOLUTION=1920x1080

# Viewport breakpoints
MOBILE_BREAKPOINT=768
TABLET_BREAKPOINT=1024

# ===========================================
# SEO Testing Configuration
# ===========================================

# SEO validation settings
CHECK_META_TAGS=true
CHECK_OPEN_GRAPH=true
CHECK_STRUCTURED_DATA=true
SITEMAP_URL=/sitemap.xml
ROBOTS_TXT_URL=/robots.txt

# ===========================================
# Accessibility Testing
# ===========================================

# Accessibility standards
AXE_STANDARD=WCAG2AA
COLOR_CONTRAST_RATIO=4.5
FONT_SIZE_MINIMUM=16

# ===========================================
# Database Configuration (for API testing)
# ===========================================

# Local database settings
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=regina_blog_test
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres

# ===========================================
# Mock & Stubbing Configuration
# ===========================================

# Enable mocking for faster/isolated tests
USE_MOCKS=false
MOCK_API_RESPONSES=false
MOCK_EXTERNAL_SERVICES=false

# ===========================================
# Retry & Timeout Configuration
# ===========================================

# Global retry settings
MAX_RETRIES=3
RETRY_DELAY=1000

# Element interaction timeouts
ELEMENT_TIMEOUT=10000
NETWORK_IDLE_TIMEOUT=30000

# ===========================================
# Browser Configuration
# ===========================================

# Default browser for tests
DEFAULT_BROWSER=chromium
HEADLESS=true
SLOW_MO=0

# Browser context settings
USER_AGENT_OVERRIDE=
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# ===========================================
# CI/CD Specific Configuration
# ===========================================

# GitHub Actions settings
GITHUB_ACTIONS=false
COVERAGE_REPORTING=true

# Test result reporting
REPORT_SLACK_WEBHOOK=
REPORT_EMAIL_RECIPIENTS=
REPORT_FORMAT=html,json

# Artifact settings
ARTIFACT_RETENTION_DAYS=30
COMPRESS_ARTIFACTS=true

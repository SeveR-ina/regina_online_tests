#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged to format and lint only staged files
npx lint-staged

# Run type check on all files (since types can affect each other)
echo "🔍 Running TypeScript type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type checking failed"
  exit 1
fi

# If any files were modified by lint-staged, abort commit
if ! git diff --quiet; then
  echo "❌ Formatting/linting made changes. Please stage them and commit again."
  exit 1
fi

echo "✅ All pre-commit checks passed!"

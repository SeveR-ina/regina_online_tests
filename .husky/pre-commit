#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit hooks..."

# ===========================================
# 1. Format code with Prettier
# ===========================================
echo "ğŸ“ Formatting code with Prettier..."
npm run format
if [ $? -ne 0 ]; then
  echo "âŒ Prettier formatting failed"
  exit 1
fi

# ===========================================
# 2. Lint code with ESLint and fix auto-fixable issues
# ===========================================
echo "ğŸ§¹ Linting code with ESLint..."
npm run lint:fix
if [ $? -ne 0 ]; then
  echo "âŒ ESLint found unfixable issues"
  exit 1
fi

# ===========================================
# 3. Type checking with TypeScript
# ===========================================
echo "ğŸ” Running TypeScript type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed"
  exit 1
fi

# ===========================================
# 4. Run smoke tests (optional, can be disabled for speed)
# ===========================================
# Uncomment the lines below to run smoke tests on commit
# echo "ğŸš€ Running smoke tests..."
# npm run test:smoke
# if [ $? -ne 0 ]; then
#   echo "âŒ Smoke tests failed"
#   exit 1
# fi

echo "âœ… All pre-commit checks passed!"
